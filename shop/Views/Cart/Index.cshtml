@model IEnumerable<GameAndQuantity>

<link rel="stylesheet" href="~/css/cart.css" />

<div class="cart_section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cart_container">
                    <div class="cart_title">Shopping Cart<small> (@Model.Sum(item => item.Quantity)) item(s) in your cart) </small></div>
                    @foreach (var item in Model)
                    {
                        <div class="cart_items">
                            <ul class="cart_list">
                                <li class="cart_item clearfix">
                                    <div class="cart_item_image"><img src="@item.Game.ImagePath" alt=""></div>
                                    <div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
                                        <div class="cart_item_name cart_info_col">
                                            <div class="cart_item_title">Name</div>
                                            <div class="cart_item_text">@item.Game.Name</div>
                                        </div>
                                        <div class="cart_item_color cart_info_col">
                                            <div class="cart_item_title">Genre</div>
                                            <div class="cart_item_text">@item.Game.Genre</div>
                                        </div>
                                        <div class="cart_item_quantity cart_info_col">
                                            <div class="cart_item_title">Quantity</div>
                                            <div class="cart_item_text">@item.Quantity</div>
                                            <div class="quantity_buttons">
                                                <button onclick="window.location.href='@Url.Action("DecreaseQuantityOfItemInCart", "Cart", new { gameId = item.Game.Id })'" class="quantity_button" data-action="decrease">-</button>
                                                <button onclick="window.location.href='@Url.Action("IncreaseQuantityOfItemInCart", "Cart", new { gameId = item.Game.Id })'" class="quantity_button" data-action="increase">+</button>
                                            </div>
                                        </div>
                                        <div class="cart_item_price cart_info_col">
                                            <div class="cart_item_title">Price</div>
                                            <div class="cart_item_text">
                                                @if (item.Game.IsOnSale && item.Game.PriceAfterSale != null)
                                                {
                                                    <text>$@item.Game.PriceAfterSale</text>
                                                }
                                                else
                                                {
                                                    <text>$@item.Game.Price</text>
                                                }
                                            </div>
                                        </div>
                                        <div class="cart_item_total cart_info_col">
                                            <div class="cart_item_title">Total</div>
                                            <div class="cart_item_text">$@(item.Game.Price * item.Quantity)</div>
                                        </div>
                                        <a onclick="window.location.href='@Url.Action("RemoveItemFromCart", "Cart", new { gameId = item.Game.Id })'" class="btn btn-light" data-abc="true"> Remove</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    }
                    <div class="cart_buttons">
                        <button type="button" onclick="window.location.href='@Url.Action("Index", "Home")'" class="button cart_button_clear">Back To Shopping</button>
                        <button type="button" onclick="window.location.href='@Url.Action("Checkout", "Cart")'" class="button cart_button_checkout">Continue ($@(Model.Sum(item => item.Game.Price * item.Quantity)))</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
